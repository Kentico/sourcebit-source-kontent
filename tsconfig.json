{
    "compilerOptions": {
      "sourceMap": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "suppressImplicitAnyIndexErrors": true,
      "lib": [
        "ES2020",
        "ES2019.Array"
      ],
      "module": "CommonJS",
      "moduleResolution": "node",
      "outDir": "./build",
      "resolveJsonModule": true,
      "strict": true,
      "skipLibCheck": true,
      "target": "ES2019"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
}